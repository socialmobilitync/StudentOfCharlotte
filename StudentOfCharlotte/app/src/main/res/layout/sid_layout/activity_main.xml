<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vishal.projtest.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1"
            android:id="@+id/profile_linear_layout_welcome">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome "
                android:id="@+id/textView"
                android:layout_weight="0.06"
                android:paddingTop="30px"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/profile_fname"
                android:layout_weight="0.06"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/profile_lname"
                android:layout_weight="0.06"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/profile_img_update_name"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:src="@android:drawable/ic_menu_manage" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:id="@+id/profile_image"
            android:src="@drawable/profpic"
            android:paddingTop="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:text="Interests:"
                android:id="@+id/textView2"
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:paddingTop="10dp"
                android:textSize="22dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:id="@+id/interestEdit"
                android:paddingLeft="5dp"
                android:src="@android:drawable/ic_menu_manage"
                android:paddingRight="4dp"
                />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Personal Info:"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:paddingLeft="4dp"
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:id="@+id/profile_img_update_personal"
                android:paddingLeft="5dp"
                android:src="@android:drawable/ic_menu_manage"
                 />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listView" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:id="@+id/profile_linear_personal_info">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Class:"
                    android:id="@+id/profile_class"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:paddingTop="20dp"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="School:"
                    android:id="@+id/profile_school"
                    android:paddingTop="20dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Rank"
                    android:id="@+id/profile_rank"
                    android:paddingTop="20dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
